---
import Project from "./Project.astro";
const { projects } = Astro.props;
---

<div id="projects" class="projects">
    {
        projects.map((p) => (
            <Project
                id={p.id}
                image={p.contents_url.replace("{+path}", "preview.png")}
                name={p.name}
                description={p.description}
                github={p.html_url}
                homepage={p.homepage}
            />
        ))
    }
</div>

<style is:global>
    .projects {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 40px;
    }

    .project {
        background-color: rgb(215, 215, 215);
        margin: 20px;
        border: 1px solid black;
        border-radius: 5px;
        padding: 20px;
        width: 300px;
    }

    .project-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .project-name {
        font-size: 24px;
        margin-top: 0;
        margin-bottom: 10px;
    }

    a {
        background-color: rgb(51, 170, 51);
        color: white;
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
        border-radius: 5px;
    }

    .a-disabled {
        background-color: rgb(212, 49, 49);
    }
</style>
